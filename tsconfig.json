{
  "compilerOptions": {
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "target": "ES2020",
    "sourceMap": true,
    "outDir": "dist",
    "incremental": true,
    "noUncheckedIndexedAccess": true,
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "*": ["src/types/*"]
    },
    "skipLibCheck": true  // Skip type checking for node_modules
  },
  "include": ["./src/**/*"],
  "exclude": ["node_modules"]  // Ensure node_modules is excluded from compilation
}
